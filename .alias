#!/bin/bash

screen-reattach(){
    if [[ $1 == "ls" ]]; then
        tmux list-sessions || screen -ls
    else
        SESSIONNAME=${1:-tmux}
        which tmux &> /dev/null
        if [ $? -eq 0 ]
        then
            tmux -2 new -A -s $SESSIONNAME
        else
            screen -R -d $SESSIONNAME
        fi
    fi
}
export -f screen-reattach
alias sr="screen-reattach"

