#!/bin/sh
lock() {
  PICTURE=/tmp/i3lock.png
  BLUR="5x4"

  scrot "$PICTURE"
  convert "$PICTURE" -blur "$BLUR" "$PICTURE"
  i3lock -i "$PICTURE"
  rm -f "$PICTURE"
}

case "$1" in
    lock)
        lock
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        lock && systemctl suspend
        ;;
    hibernate)
        lock && systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
