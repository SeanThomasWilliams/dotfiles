#!/usr/bin/env bash
# shellcheck disable=SC2068

set -eu -o pipefail

usage(){
  cat >&2 <<EOF
Replace all instances of the first string with the second string in all matching files

Usage: $0 [options] <FIND_STRING> <REPLACE_STRING> [TARGET_DIR]

Arguments:
  FIND_STRING
    The string to find
  REPLACE_STRING
    The string to replace it with

Options:
  -a
    Search all files (even hidden files, except .git)
  -d
    Directory to search within (overridden by <TARGET_DIR>)
  -n
    File name pattern to search for
  -n
    Max directory depth to search
  -t
    Filetype (sh, py, etc)
  -h
    Show usage and exit
EOF
}

if [[ -n ${DEBUG-} ]]; then
  set -x
fi

TARGET_DIR=('.')
IGNORE_PATTERN='^\.[a-z]|/\.[a-z]'

while getopts ':ad:f:n:t:h' opt; do
  case "${opt}" in
    a)
      IGNORE_PATTERN='\.git'
      ;;
    d)
      TARGET_DIR=("${OPTARG}")
      ;;
    f)
      FILE_NAME="${OPTARG}"
      ;;
    n)
      MAX_DEPTH="${OPTARG}"
      ;;
    t)
      FILE_TYPE="${OPTARG}"
      ;;
    h)
      usage
      exit 0
      ;;
    *)
      usage
      exit 1
      ;;
  esac
done

shift $((OPTIND-1))

if [[ $# -lt 1 ]]; then
  usage
  exit 1
fi

if [[ $# -ge 1 ]]; then
  # Escape special characters
  FIND_STRING=$(printf "%s" "$1" | sed -e 's/[]\/$*.^[]/\\&/g')
  shift
fi

if [[ $# -ge 1 ]]; then
  REPLACE_STRING="$1"
  shift
fi

if [[ $# -ge 1 ]]; then
  TARGET_DIR=("$@")
fi

# Construct FILE_GLOB
FILE_GLOB='*'
if [[ -n ${FILE_NAME-} ]]; then
  FILE_GLOB="*${FILE_NAME}*"
fi

if [[ -n ${FILE_TYPE-} ]]; then
  FILE_GLOB="${FILE_GLOB}.${FILE_TYPE}"
fi

# Set maxdepth if directed
FIND_GLOBAL_ARGS=(
  "${TARGET_DIR[@]}"
)

if [[ -n ${MAX_DEPTH-} ]]; then
  FIND_GLOBAL_ARGS+=(-maxdepth "$MAX_DEPTH")
fi

FIND_CMD=(
  find "${FIND_GLOBAL_ARGS[@]}"
  -type f \
  -ipath "$FILE_GLOB"
  -printf '%p\n'
)

if [[ -z ${REPLACE_STRING-} ]]; then
  echo >&2 "Preview of matching files contents: "
  "${FIND_CMD[@]}" 2>/dev/null |\
    sed 's#^\./##' |\
    grep -Ev "${IGNORE_PATTERN}" |\
    xargs grep --color -- "$FIND_STRING"
  exit
fi

"${FIND_CMD[@]}" 2>/dev/null |\
  sed 's#^\./##' |\
  grep -Ev "${IGNORE_PATTERN}" |\
  xargs sed -i "s#$FIND_STRING#$REPLACE_STRING#g"
